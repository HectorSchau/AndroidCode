<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prop_menu2">

    <Button
        android:id="@+id/mBtnCompras"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="80dp"
        android:onClick="Compras"
        android:text="Compras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mBtnVentas"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="60dp"
        android:onClick="Ventas"
        android:text="Ventas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mBtnAlquileres"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:onClick="Alquileres"
        android:text="Alquileres"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mBtnCompras" />

    <Button
        android:id="@+id/mBtnAlqPed"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:onClick="AlqPed"
        android:text="Alquileres Pedidos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mBtnVentas" />

    <Button
        android:id="@+id/mBtnHoteles"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_marginTop="60dp"
        android:onClick="Hoteles"
        android:text="Hoteles y Hospedajes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mBtnAlquileres" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="187dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:text="Propiedades"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="183dp"
        android:layout_height="22dp"
        android:layout_marginTop="1dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>